{
    "openapi": "3.1.0",
    "info": {
        "title": "Restaurant module",
        "version": "1.0.0"
      },
    "paths": {
        "/FoodOrdering": {
            "Post": {
                "summary": "Food ordering",
                "operationId": "FoodOrdering",
                "parameters": [
                    {
                        "name": "dishes",
                        "in": "query",
                        "description": "Dish list",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/Dish"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        },
        "/TableReservation": {
            "Post": {
                "summary": "Make reservation",
                "operationId": "MakeReservation",
                "parameters": [
                    {
                        "name": "number",
                        "in": "query",
                        "description": "Number of people",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "name": "date",
                        "in": "query",
                        "description": "Date",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "time",
                        "in": "query",
                        "description": "Time",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        },
        "/ShowHours": {
            "get": {
                "summary": "Display business hours",
                "operationId": "ShowHours",
                "parameters": [
                    {
                        "name": "date",
                        "in": "query",
                        "description": "Date",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        }
    },
    "components":{
        "schemas": {
            "Dish": {
                "type": "object",
                "description":  "A dish ordered by the user",
                "required": ["category", "name", "quantity"],
                "properties": {
                    "category":  {
                        "type": "string",
                        "description":  "Dish category"
                    },
                    "name": {   
                        "type": "string",
                        "description": "Dish name"
                    },
                    "size": {   
                        "type": "string",
                        "description": "Dish size"
                    },
                    "isAddOption": {   
                        "type": "boolean",
                        "description": "Indicates whether additional options should be included with the dish"
                    },
                    "options": {   
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Dish options"
                    },
                    "quantity": {   
                        "type": "integer",
                        "description": "Dish quantity"
                    }
                }
            }
        }
    }    
}
